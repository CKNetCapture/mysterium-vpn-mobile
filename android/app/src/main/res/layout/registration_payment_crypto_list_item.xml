<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/select_payment_currency_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="0dp">

        <ImageView
            android:id="@+id/select_payment_currency_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:imageResource="@{currency.logoResourceId()}"
            tools:src="@drawable/crypto_btc" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_check_circle_64dp"
                android:layout_alignParentEnd="true"
                android:visibility="@{viewModel.payCurrency.code == currency.code ? View.VISIBLE : View.INVISIBLE}"
                />

            <TextView
                android:id="@+id/select_payment_currency_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@{currency.name()}"
                android:textSize="18sp"
                tools:text="Bitcoin" />
        </RelativeLayout>



    </LinearLayout>

    <data>

        <import type="android.view.View" />

        <variable
            name="currency"
            type="network.mysterium.payment.Currency" />

        <variable
            name="viewModel"
            type="network.mysterium.registration.RegistrationViewModel" />
    </data>
</layout>
